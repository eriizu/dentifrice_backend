{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "baseUrl": ".",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
        // "src/**/*.d.ts"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.jest.ts",
        "node_modules"
    ],
    "typeRoots": [
        "src/"
    ]
}